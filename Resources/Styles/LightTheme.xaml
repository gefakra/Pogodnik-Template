<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"                    
                    x:Class="WeatherApp.Resources.Styles.LightTheme">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Styles/Colors.xaml" />
        <ResourceDictionary Source="../Styles/Styles.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <Color x:Key="PrimaryColor">#0077FF</Color>   
    <Color x:Key="OverlayDark">#33FFFFFF</Color>
    <Color x:Key="TextColorPrimary">White</Color>
    <Color x:Key="IconColor">Black</Color>
    <Color x:Key="PageBackgroundColor">#00000000</Color>
    <Color x:Key="BackgroundGradientStart">#81D4FA</Color>
    <Color x:Key="BackgroundGradientEnd">#0077FF</Color>
    <Color x:Key="LogoTextColor">#FFFFFF</Color>
    <Color x:Key="EntryTextColor">#FFFFFF</Color>
    <Color x:Key="FrameBackgroundColor">#80000000</Color>

</ResourceDictionary>
