<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"                    
                    x:Class="WeatherApp.Resources.Styles.DarkTheme">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Styles/Colors.xaml" />
        <ResourceDictionary Source="../Styles/Styles.xaml" />
    </ResourceDictionary.MergedDictionaries>
<!-- Цвета фона -->
    <Color x:Key="PageBackgroundColor">#121212</Color>
    <Color x:Key="BackgroundGradientStart">#121212</Color>
    <Color x:Key="BackgroundGradientEnd">#26D0CE</Color>

    <!-- Цвета текста -->
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#AAAAAA</Color>
    <Color x:Key="LogoTextColor">#FFFFFF</Color>
    <Color x:Key="EntryTextColor">#FFFFFF</Color>

    <!-- Цвета кнопок -->
    <Color x:Key="ButtonBackgroundColor">#00C9A7</Color>
    <Color x:Key="ButtonTextColor">#000000</Color>

    <!-- Цвета иконок и оверлеев -->
    <Color x:Key="IconColor">#FFFFFF</Color>
    <Color x:Key="OverlayDark">#33FFFFFF</Color>

    <!-- Цвета фреймов -->
    <Color x:Key="FrameBackgroundColor">#801F1F1F</Color>
</ResourceDictionary>
