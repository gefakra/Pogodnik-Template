<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="WeatherFrameStyle" TargetType="Frame">
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource FrameBackgroundColor}"/>
        <Setter Property="HasShadow" Value="False"/>
        <Setter Property="Padding" Value="10"/>
    </Style>

    <!-- Стиль Entry -->
    <Style x:Key="SearchEntryStyle" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{DynamicResource EntryTextColor}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="PlaceholderColor" Value="#80FFFFFF"/>        
    </Style>

    <!-- Стиль текста погоды -->
    <Style x:Key="WeatherInfoLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>

</ResourceDictionary>
